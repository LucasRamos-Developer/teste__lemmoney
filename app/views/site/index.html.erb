<div class="wrap">
  <div class="container">
    <div class="row">
      <% @offers.each do |offer| %>
        <div class="col-md-4">
          <div class="offers-content">
            <div class="inner">
              <% if offer.is_premium? %>
                <span class="badge badge-premium">Premium</span>
              <% end %>
              <h2><%= offer.advertiser_name %></h2>
              <div class="btn-container">
                <a class="btn btn-link" href="<%= offer.url %>" target='_blank'>Comprar Agora</a>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>